// Prisma schema for multi-agent collaboration app
// CHANGED: Added Auth.js models + Profile for user preferences

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Auth.js required models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // CHANGED: User's profile for preferences/facts
  profile       Profile?

  // CHANGED: Private chat messages
  privateMessages PrivateMessage[]

  // Group collaborations
  createdGroups  Group[]       @relation("GroupCreator")
  groupMembers   GroupMember[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? // CHANGED: Stores OAuth refresh token for Google API access
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// CHANGED: User profile storing preferences as flat list of strings
model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Profile items stored as JSON array of strings
  // e.g., ["Diet: vegetarian", "Timing: prefers early nights", "Vibe: calm environments"]
  items     String   @default("[]") // JSON array of strings

  // Recent change log for UI display (last N changes)
  changeLog String   @default("[]") // JSON array of change objects

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// CHANGED: Private 1:1 chat messages between user and their assistant
model PrivateMessage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  role      String   // "user" | "assistant"
  content   String

  // Optional: citations from web search
  citations String?  // JSON array of citation objects

  createdAt DateTime @default(now())
}

// Group collaboration models
model Group {
  id          String   @id @default(cuid())
  title       String?
  createdById String
  createdBy   User     @relation("GroupCreator", fields: [createdById], references: [id], onDelete: Cascade)

  // Canonical state stored as JSON (contains goal, constraints, decisions, etc.)
  canonicalState String @default("{}")

  // Active assistant status for turn indicator (JSON string or null)
  // Stored in DB so ALL users can see which assistant is currently working
  activeStatus String?

  members     GroupMember[]
  messages    GroupMessage[]

  lastActiveAt DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model GroupMember {
  id       String   @id @default(cuid())
  groupId  String
  group    Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  userId   String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  role     String   @default("member") // "creator" | "member"
  isActive Boolean  @default(true)

  joinedAt DateTime @default(now())

  @@unique([groupId, userId])
}

model GroupMessage {
  id        String   @id @default(cuid())
  groupId   String
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  // Author can be a user ID or "userId-assistant" for assistants
  authorId   String
  authorName String
  role       String  // "user" | "assistant"
  content    String

  // Optional: citations from web search
  citations  String? // JSON array of citation objects

  createdAt  DateTime @default(now())
}
